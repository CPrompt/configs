# Don't display the copyright page
startup_message off

#set default to utf8
defutf8 on

# tab-completion flash in heading bar
vbell off

term screen-256color

# keep scrollback n lines
defscrollback 1000

# autostart apps
screen	-t	vim	0	vim
screen	-t	xonsh	1	xonsh
screen	-t	htop	2	htop
screen  -t	cmus	3	cmus
screen  -t	irssi	4	irssi
# see if we can split the screen verticle on start
# split -v

# might add a backtick here to display ipv4 address
# backtick 101 0 20 hostname -I | sed 's .*//'

# THIS IS THE PRETTY BIT
hardstatus	on
